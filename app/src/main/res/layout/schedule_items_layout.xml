<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dayOfTheWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wake up"
            android:textAlignment="center"
            android:textColor="@color/colorAccent" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/wakeUpHour"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="Hour"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textColorHint="@color/colorAccent" />

            <EditText
                android:id="@+id/wakeUpMinute"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="Minute"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textColorHint="@color/colorAccent" />

            <Switch
                android:id="@+id/amOrPm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="PM or AM"
                android:textColorHint="@color/colorAccent"
                android:textOff="Off"
                android:textOn="On" />

            <Button
                android:id="@+id/wakeUpButton"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>



    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nap Time"
            android:textAlignment="center"
            android:textColor="@color/colorAccent" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/napTimeHour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="Hour"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textColorHint="@color/colorAccent" />

            <EditText
                android:id="@+id/napTimeMinute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="Minute"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textColorHint="@color/colorAccent" />

            <Switch
                android:id="@+id/NapAmOrPm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="PM or AM"
                android:textColorHint="@color/colorAccent"
                android:textOff="Off"
                android:textOn="On" />

            <Button
                android:id="@+id/napTimeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sleep Time"
            android:textAlignment="center"
            android:textColor="@color/colorAccent" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/sleepTimeHour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="Hour"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textColorHint="@color/colorAccent" />

            <EditText
                android:id="@+id/sleepTimeMinute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="Minute"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textColorHint="@color/colorAccent" />

            <Switch
                android:id="@+id/SleepAmOrPm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="PM or AM"
                android:textColorHint="@color/colorAccent"
                android:textOff="Off"
                android:textOn="On" />

            <Button
                android:id="@+id/sleepTimeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="200px"
        />





</LinearLayout>